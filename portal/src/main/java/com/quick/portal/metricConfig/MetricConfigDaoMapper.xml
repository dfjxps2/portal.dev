    <!-- 新增metric -->
	<insert id="insert" parameterType="com.quick.portal.metricConfig.MetricConfigDO">
		insert into sec_metric_config (
    		  user_id,
    		  sec_metric_id,
    		  param_id,
    		  param_value,
    		  valid_time
		)values(
			 #{user_id},
			 #{sec_metric_id},
			 #{param_id},
			 #{param_value},
			 #{valid_time}
			)
	</insert>
		
	<!-- 修改metric -->
	<update id="update" parameterType="com.quick.portal.metricConfig.MetricConfigDO">
		update sec_metric_config 
		   set user_id=#{user_id}
			  ,sec_metric_id=#{sec_metric_id}
			  ,param_id=#{param_id}
			  ,param_value=#{param_value}
			  ,valid_time=#{valid_time}
		 where config_id = #{config_id}
	</update>
    
	<!-- 删除 -->
	<delete id="delete" parameterType="String">
		delete from sec_metric_config where config_id = #{config_id}
	</delete>
    
